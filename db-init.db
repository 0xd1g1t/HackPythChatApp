use chatdb;

# create table mit namen chatusers
create table chatusers (id INT NOT NULL auto_increment, primary key (id));
alter table chatusers add column username VARCHAR(128) not null;
alter table chatusers add column password varchar(128) not null;
alter table chatusers add column status VARCHAR(128) not null;
alter table chatusers add column avatar VARCHAR(128) not null;

# create table mit name messages
create table messages (id INT NOT NULL auto_increment, primary key (id));
alter table messages add column from_user INT not null;
alter table messages add column to_user INT not null;
alter table messages add column message VARCHAR(1024) not null;

